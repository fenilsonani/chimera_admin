<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- Add Bootstrap CSS and JS links here -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        /* Add custom CSS for better design */
        body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .removeQuestion {
            margin-top: 10px;
        }
    </style>
</head>
<body>
<form action="AddQuestionSet" method="post">
    <!-- Question Set Name -->
    <div class="form-group">
        <label for="questionSetName">Question Set Name</label>
        <input type="text" class="form-control" id="questionSetName" name="questionSetName" placeholder="Enter your question set name">
    </div>

    <!-- Toggle button to switch between multiple choice and single choice -->
    <div id="questionSet">
        <div id="question" class="form-group">
            <label for="questionType">Multiple Choice</label>
            <input type="checkbox" id="MultipleChoiceQuestion" name="MultipleChoiceQuestion" value="true">

            <!-- Multiple choice Question -->

            <label for="question">Question 1</label>
            <input type="text" class="form-control" id="question" name="question[]" placeholder="Enter your question">

            <div id="answerDiv">
                <label for="answer1">Answer 1</label>
                <input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">
            </div>
            <!-- Button to remove question -->
            <button type="button" class="btn btn-danger removeQuestion">Remove Question</button>
            </div>
        </div>
    </div>

    <!-- Button to add new question -->
    <button type="button" class="btn btn-primary addnewQuestion">Add Question</button>
    <button type="submit" class="btn btn-primary">Add Question Set</button>
</form>

<script>
    $(document).ready(function () {
        var quetion = $('#questionSet').html();

        $(document).on('change', '#MultipleChoiceQuestion', function () {
            var answerDiv = $(this).parent('#question').children('#answerDiv');
            answerDiv.children().remove();
            if ($(this).prop('checked')) {
                answerDiv.append('<label for="answer1">Answer 1</label><input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">');
                answerDiv.append('<label for="answer2">Answer 2</label><input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">');
                answerDiv.append('<label for="answer3">Answer 3</label><input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">');
                answerDiv.append('<label for="answer4">Answer 4</label><input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">');
            } else {
                answerDiv.append('<label for="answer1">Answer 1</label><input type="text" class="form-control answer" id="answer" name="choice[]" placeholder="Enter your answer">');
            }
        });

        $('.addnewQuestion').click(function () {
            $('#questionSet').append(quetion);
        })

        $(document).on('click', '.removeQuestion', function () {
            $(this).parent('#question').remove();
        });
    });
</script>
</body>
</html>
